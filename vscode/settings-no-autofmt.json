{
  ///////////////////////////////////////////////////////////////////////////
  // OFF TELEMETRIES (LIFTED TO NEAR TOP FOR VISIBILITY
  ///////////////////////////////////////////////////////////////////////////

  // Global telemetries
  "telemetry.telemetryLevel": "off", // Since v1.61 Oct'21
  "python.experiments.enabled": false,
  "workbench.enableExperiments": false,

  // Extensions telemetries
  "aws.telemetry": false,
  "gitlens.advanced.telemetry.enabled": false,
  "redhat.telemetry.enabled": false,


  ///////////////////////////////////////////////////////////////////////////
  // EXPERIMENTAL OR PREVIEW FEATURES
  ///////////////////////////////////////////////////////////////////////////


  ///////////////////////////////////////////////////////////////////////////
  // HYPER-PERSONALIZED STANZA
  ///////////////////////////////////////////////////////////////////////////

  // Misc
  "extensions.verifySignature": false,   // workaround extensions stop working on Linux insider, since Feb'25
  "security.workspace.trust.untrustedFiles": "open",
  "remote.autoForwardPortsSource": "hybrid",
  //"remote.SSH.configFile": "C:\\Users\\vmarch\\Documents\\.ssh\\config",   // VSCode windows (host)
  //"remote.SSH.serverInstallPath": {
  //  "whackathon": "/home/vmarch/.vscode-server.marcverd"    // Use-case: multiple individuals share the same remote Linux uid
  //},
  //"remote.SSH.remotePlatform": {
  //  "win-hgx-056": "linux"
  //},

  // Python paths
  "python.defaultInterpreterPath": "/home/verdi/miniconda3/envs/py/bin/python",
  "terminal.external.osxExec": "kitty",

  // GUI: zoom level at the end of this file.
  //"editor.fontFamily": "Monego",
  "debug.console.fontSize": 11,
  "editor.fontSize": 11,
  //"editor.lineHeight": 18,
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.lineHeight": 1.2,
  "extensions.ignoreRecommendations": true, // Default to true; set false if you prefer.
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#2d2d2d" // For dark theme
  },
  // "window.titleBarStyle": "custom",
  // GUI: extensions
  "markdown.preview.fontSize": 16, // yzhang.markdown-all-in-one


  ///////////////////////////////////////////////////////////////////////////
  // OTHER CONFIGS
  ///////////////////////////////////////////////////////////////////////////

  // File exclusions
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/._*": true,
    "**/__pycache__": true,
    "**/.ipynb_checkpoints": true,
    "**/.*_cache": true,
    "**/.tox": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/*.pyc": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/._*/**": true,
    "**/__pycache__/**": true,
    "**/.ipynb_checkpoints/**": true,
    "**/.*_cache/**": true,
    "**/.tox/**": true,
    "**/.mypy_cache/**": true,
    "**/.pytest_cache/**": true,
    "**/.ruff_cache/**": true
  },

  "files.associations": {
    "**/.ngc/**/config": "ini",
    ".env*": "dotenv"
  },

  // Javascript
  "[javascript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "never",
      "source.fixAll": "never"
    }
  },

  "[json][jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2
  },

  "[yaml]": {
    "editor.tabSize": 2
  },

  // Python
  "debug.allowBreakpointsEverywhere": true,
  "jupyter.askForKernelRestart": false,
  "jupyter.debugJustMyCode": false,
  "jupyter.disableJupyterAutoStart": true,
  "jupyter.interactiveWindow.textEditor.magicCommandsAsComments": true,
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  "mypy-type-checker.args": [ "--show-error-codes" ], // ms-python.mypy-type-checker
  "notebook.insertFinalNewline": true,
  "notebook.lineNumbers": "on",
  "notebook.output.scrolling": true, // v1.77 (Mar23)
  "[python]": {
    "editor.defaultFormatter": null,
    "editor.formatOnType": true, // Auto-indent with Pylance, v1.75 Jan23
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "never",
      "source.fixAll": "never" // Don't like. Import can be removed unpredictably.
    }
  },
  "python.analysis.aiCodeActions": {
        "generateDocstring": true
  },
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.supportDocstringTemplate": true,
  "python.languageServer": "Pylance",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "ruff.args": [ "--ignore E501" ],  // Disable "line too long" when charliemarsh.ruff extension is on

  // Workbench & editor
  "breadcrumbs.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  //"editor.formatOnSave": true,  // Too intrusive when working with existing files
  //"editor.formatOnSaveMode": "modifications",  //Not supported with Black
  "editor.codeActionsOnSave": {
    "source.fixAll.markdownlint": "never" // Extension davidanson.vscode-markdownlint
  },
  "editor.accessibilitySupport": "off",
  "editor.comments.ignoreEmptyLines": false,
  "editor.detectIndentation": false,
  "editor.largeFileOptimizations": false,
  "editor.minimap.enabled": false,
  "editor.parameterHints.cycle": true,
  "editor.renderLineHighlight": "all",
  //"editor.renderWhitespace": "trailing",
  "editor.renderControlCharacters": false,
  "editor.rulers": [ 80, 100 ],
  "editor.showUnused": true,
  "editor.stickyScroll.enabled": true,
  "editor.stickyTabStops": true,
  "editor.suggestSelection": "first",
  "editor.wordWrapColumn": 100,
  "editor.wordWrap": "on",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "git.detectSubmodules": false,
  "git.openRepositoryInParentFolders": "never",
  "git.terminalAuthentication": false,
  "json.format.keepLines": true,
  "markdown.extension.toc.levels": "2..6",
  "markdown.occurrencesHighlight.enabled": true,
  "markdown.updateLinksOnFileMove.enabled": "always",
  "markdown.validate.enabled": true,
  "outline.showVariables": false,
  "outline.collapseItems": "alwaysCollapse",
  "search.mode": "reuseEditor",
  "scm.diffDecorationsGutterPattern": {
    "added": true
  },
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.localEchoLatencyThreshold": -1,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.rightClickBehavior": "default",
  "terminal.integrated.stickyScroll.enabled": true, // Nov23 default is on
  "terminal.integrated.stickyScroll.maxLineCount": 5,
  "window.confirmSaveUntitledWorkspace": false,
  "workbench.editor.decorations.colors": true,
  "workbench.editor.decorations.badges": true,
  // "workbench.editor.enablePreviewFromCodeNavigation": true,
  "workbench.reduceMotion": "on",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 20,

  // Shortcuts in integrated terminal
  "terminal.integrated.allowChords": false, // send ctrl+k to integrated terminal
  "terminal.integrated.commandsToSkipShell": [
    // Linux: send ctrl+e to integrated terminal
    "-workbench.action.quickOpen",

    // alt-backspace to behave like in Bash
    "-workbench.action.terminal.deleteWordLeft"
  ],
  //"terminal.integrated.macOptionIsMeta": true, // Allow alt-{f,b,.} in integrated terminal. See https://github.com/Microsoft/vscode/issues/11314
  "terminal.integrated.sendKeybindingsToShell": true,
  "terminal.integrated.showExitAlert": false,

  // Extensions
  "autoDocstring.docstringFormat": "google",
  "aws.samcli.location": "/usr/local/bin/sam",
  "aws.profile": "default",
  "docker.extension.enableComposeLanguageServer": true,
  "gitlens.hovers.currentLine.over": "line",
  // "markdown.extension.preview.autoShowPreviewToSide": true,
  "[markdown]": {
    // TODO: which one to enabled?
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    //"editor.defaultFormatter": "DavidAnson.vscode-markdownlint",  // from wsl2
    "editor.formatOnSave": false
  },
  "remote.SSH.defaultExtensions": [
    "bierner.github-markdown-preview",
    "bierner.markdown-mermaid",
    //"charliermarsh.ruff",
    "christian-kohler.path-intellisense",
    "davidanson.vscode-markdownlint",
    "donjayamanne.githistory",
    "dotenv.dotenv-vscode",
    "editorconfig.editorconfig",
    "gruntfuggly.todo-tree",
    "gxl.git-graph-3",
    "hyunkyunmoon.gzipdecompressor",
    "janisdd.vscode-edit-csv",
    "mechatroner.rainbow-csv",
    //"ms-azuretools.vscode-containers",
    //"ms-python.autopep8",
    //"ms-python.black-formatter",
    "ms-python.debugpy",
    //"ms-python.mypy-type-checker",
    "ms-python.vscode-pylance",
    "ms-python.python",
    //"ms-python.vscode-python-envs",
    "ms-toolsai.jupyter",
    "ms-toolsai.vscode-jupyter-powertoys",
    "njpwerner.autodocstring",
    "redhat.vscode-yaml",
    "shardulm94.trailing-spaces",
    "tamasfe.even-better-toml",
    "visualstudioexptteam.vscodeintellicode",
    "xadillax.viml",
    "yzhang.markdown-all-in-one"
  ],
  "rewrap.wrappingColumn": 100,
  "sql-formatter.uppercase": true,
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "foreground": "yellow"
    },
    "FIXME": {
      "foreground": "red"
    },
    "HACK": {
      "foreground": "magenta"
    }
  },
  "todo-tree.highlights.defaultHighlight": {
    "opacity": 0,
    "fontStyle": "italic",
    "fontWeight": "bold"
  },
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "todo-tree.tree.showScanModeButton": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "window.zoomLevel": 0.0,

  // Pre-release
  // Last Released: 2025-07-16, 18:44:16
  // Last Updated: 2025-07-19, 18:28:57
  //
  // Note: The Python Environments icon may no longer appear in the Activity Bar due to the ongoing
  // rollout of the Python Environments extension. To restore the extension, add
  // "python.useEnvironmentsExtension": true to your User settings. This setting is temporarily
  // necessary until the rollout is complete!
  //"python.useEnvironmentsExtension": true,
}
